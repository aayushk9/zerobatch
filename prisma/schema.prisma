generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Founder {
  id          String  @id @default(uuid())
  username    String
  email       String  @unique
  password    String
  startups    Startup[]
}

model Startup {
  id          String  @id @default(uuid())
  founderId   String
  founder     Founder @relation(fields: [founderId], references: [id])
  startupName String
  slug        String  @unique
  user        BetaUser[]
}

model BetaUser {
   id              String  @id @default(uuid())
   username        String
   email           String  @unique
   whyInterested   String
   submittedAt     DateTime @default(now())
   startup         Startup @relation(fields:[startupId], references:[id])
   startupId       String
}